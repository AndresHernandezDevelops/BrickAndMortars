<?xml version="1.0" encoding="ISO-8859-1" ?>
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page" version="2.0">
	<jsp:directive.page contentType="text/html; charset=ISO-8859-1" 
		pageEncoding="ISO-8859-1" session="false"/>
	<jsp:output doctype-root-element="html"
		doctype-public="-//W3C//DTD XHTML 1.0 Transitional//EN"
		doctype-system="http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"
		omit-xml-declaration="true" />
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title>Insert title here</title>
</head>
<body>
	<tr>
		<td><label for="user">Enter Username: </label></td>
		<td><input id='user' name='user'/></td>
	</tr>
	<tr>
		<td><label for="pw">Enter Password: </label></td>
		<td><input id='pw' name='pw'/></td>
		<!-- require letters and numbers for security maybe? -->
	</tr>
	<tr>
		<td><label for="pwconf">Confirm Password: </label></td>
		<td><input id='pwconf' name='pwconf'/></td>
		<!-- todo: check pw == pwconf -->
	</tr>
	<tr>
		<td><label for="email">Enter Email: </label></td>
		<td><input id='email' name='email'/></td>
		<!-- have some sort of check here too @___ is valid -->
	</tr>
	<tr>
		<td><label for="cc">Enter Credit Card Number: </label></td>
		<td><input id='cc' type="number" name='cc'/></td>
		<!-- todo: check for 16 chars -->
	</tr>
	
</body>
</html>
</jsp:root>