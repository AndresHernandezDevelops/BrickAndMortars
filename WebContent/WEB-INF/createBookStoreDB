CREATE TABLE REVIEW (
bid VARCHAR(20) NOT NULL,
name VARCHAR(20) NOT NULL,
day varchar(20) NOT NULL,
review varchar(200),
rating int,
PRIMARY KEY(bid, name, day),
FOREIGN KEY (bid) REFERENCES book (bid) ON DELETE CASCADE
);

