DROP TABLE address;
DROP TABLE po;
DROP TABLE poitem;
DROP TABLE review;
DROP TABLE visitevent;
DROP TABLE book;
DROP TABLE Login;

/** username: login id
* password: login password
**/
CREATE TABLE Login(
username VARCHAR(30) NOT NULL,
password VARCHAR(30) NOT NULL,
PRIMARY KEY(username)
);
